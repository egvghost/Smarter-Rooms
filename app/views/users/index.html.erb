<h5 class="container" style="background-color: #bce5ff; color:#42698f; opacity:0.7; width:900px; text-align:center"><b>Registered users</b></h5>
<table class="table table-striped table-hover" style="width:900px;">
  <thead style="background-color:rgba(0, 151, 255, 0.5)">
    <tr>
      <th style="width:30%;">Name</th>
      <th style="width:30%;">Email</th>
      <th style="width:15%;">Admin?</th>
      <th Style="text-align:center;">Action</th>
    </tr>
  </thead>
  <tbody style="background-color:rgba(0, 181, 255, 0.5)">
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td Style="text-align:center;">
          <%= link_to 'Profile', user, :class => "btn btn-sm btn-primary" %>
          <% if current_user.is_admin? %>
            &nbsp; <%= link_to 'Edit', edit_user_path(user), :class => "btn btn-sm btn-info" %>
            <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table><br><br>
<% if current_user.is_admin? %>
  <%= link_to 'New User', new_user_path, :class => "btn btn-sm btn-success" %>
<% end %>
