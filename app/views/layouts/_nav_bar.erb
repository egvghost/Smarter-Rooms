<div class="header clearfix">
  <nav class="navbar fixed-top navbar-light" style="background-color:#42698f; opacity:0.8; padding:1px;">
    <a class="navbar-brand" href="#" style="font-size:14px;">
      &nbsp; <%= image_tag "calendar.jpg", style:"height:50px; width:65px;" %>
      Smarter Rooms
    </a>
    <% if logged_in? %>
      <ul class="nav nav-pills float-right">
        <li class="nav-item">
        <% if @home_selected_in_nav %>
          <a class="btn btn-outline-primary" href="/">Home <span class="sr-only">(current)</span></a>
        <% else %>
          <a class="btn btn-outline-default" href="/">Home <span class="sr-only">(current)</span></a>
        <% end %>
        </li>
        <li class="nav-item">
        <% if @buildings_selected_in_nav %>
          <a class="btn btn-outline-primary" href="/buildings" role="button">Buildings</a>
        <% else %>
          <a class="btn btn-outline-default" href="/buildings" role="button">Buildings</a>
        <% end %>
        </li>
        <li class="nav-item">
        <% if @rooms_selected_in_nav %>
          <a class="btn btn-outline-primary" href="/rooms" role="button">Rooms</a>
        <% else %>
          <a class="btn btn-outline-default" href="/rooms" role="button">Rooms</a>
        <% end %>
        </li>
        <% if current_user.is_admin? %>
          <li class="nav-item">
          <% if @accessories_selected_in_nav %>
            <a class="btn btn-outline-primary" href="/accessories" role="button">Equipment</a>
          <% else %>
            <a class="btn btn-outline-default" href="/accessories" role="button">Equipment</a>
          <% end %>
          </li>
          <li class="nav-item">
          <% if @users_selected_in_nav %>
            <a class="btn btn-outline-primary" href="/users" role="button">Users</a>
          <% else %>
            <a class="btn btn-outline-default" href="/users" role="button">Users</a>
          <% end %>
          </li>
          <li class="nav-item">
          <% if @reservations_selected_in_nav %>
            <a class="btn btn-outline-primary" href="/all_reservations" role="button">Reservations</a>
          <% else %>
            <a class="btn btn-outline-default" href="/all_reservations" role="button">Reservations</a>
          <% end %>
          </li>
        <% end %>
        <li class="nav-item">
          <% if @about_selected_in_nav %>
            <a class="btn btn-outline-primary" href="/about" role="button">About</a>
          <% else %>
            <a class="btn btn-outline-default" href="/about" role="button">About</a>
          <% end %>
        </li>
      </ul>
      <div class="py-2 d-none d-md-inline-block ui pointing dropdown link item">
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
            <%=icon 'fa fas fa-user-circle', class: 'dropdown icon'%> 
            <%=current_user.name%>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'My Reservations', reservations_path, class: 'dropdown-item' %></li>
            <li><%= link_to 'My Profile', current_user, class: 'dropdown-item' %></li>
            <li role="separator" class="dropdown-divider"></li>
            <li><%= link_to 'Logout', logout_path, method: :delete, class: 'dropdown-item' %></li>
          </ul>
        </div>
      </div>
    <% else %>
      <%= link_to "Sign in", login_path, :class => "btn btn-sm btn-info" %>
    <% end %>
  </nav>
</div>