<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Floor</th>
      <th>Max capacity</th>
      <th>Active?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.code %></td>
        <td><%= room.floor %></td>
        <td><%= room.max_capacity %></td>
        <td><%= room.active %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Reserve', new_reservation_path(room_id: room.id), class: 'btn btn-sm btn-primary' %></td> &nbsp; &nbsp;
        <% if current_user.is_admin? %>
          <td><%= link_to 'Edit', edit_room_path(room) %></td>
          <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if current_user.is_admin? %>
  <%= link_to 'New Room', new_room_path %>
<% end %>
