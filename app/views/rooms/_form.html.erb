<%= form_with(model: room, local: true) do |form| %>
  <div class="row">
    <div class="col-9">
      <%= form.label :name %><br>
      <%= form.text_field :name, size: 30 %>
    </div>
    <div class="col">
      <%= form.label :code %><br>
      <%= form.text_field :code, size: 3 %>
    </div>
  </div><br>
  <div class="row">
    <div class="col-6">
      <%= form.label :building %><br>
      <%= form.collection_select(:building_id, @buildings, :id, :name) %>
    </div>
      <div class="col">
      <%= form.label :floor %><br>
      <%= form.number_field :floor %>
    </div>
    <div class="col">
      <%= form.label :max_capacity %><br>
      <%= form.number_field :max_capacity, min: 0 %>
    </div>
  </div><br>
  <div class="row">
    <div class="col">
    <div class="check-box checkbox-margin">
      <%= form.label :equipment %><br>
      <%= form.collection_check_boxes(:accessory_ids, @equipment, :id, :name) %>
    </div></div>
  </div><br>
  <div class="field">
    <%= form.label :active %> &nbsp; 
    <%= form.check_box :active %>
  </div>
  <div class="actions" style="float:right">
    <%= form.submit %>
  </div>
<% end %>
