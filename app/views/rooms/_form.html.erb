<%= form_with(model: room, local: true) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :building %>
    <%= form.collection_select(:building_id, @buildings, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :code %>
    <%= form.text_field :code %>
  </div>

  <div class="field">
    <%= form.label :floor %>
    <%= form.number_field :floor %>
  </div>

  <div class="field">
    <%= form.label :max_capacity %>
    <%= form.number_field :max_capacity, min: 0  %>
  </div>

  <div class="field">
    <%= form.label :equipment %> <br>
    <%= form.collection_check_boxes(:accessory_ids, @equipment, :id, :name) %>
  </div>
    
  <div class="field">
    <%= form.label :active %><br>
    <%= form.check_box :active %><br>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
